    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const tabs = document.querySelectorAll('.tab-button');
            const featureContents = document.querySelectorAll('.feature-content');
            const founderContents = document.querySelectorAll('.founder-content');
            let currentIndex = 0;

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const tabId = tab.getAttribute('data-tab');
                    
                    tabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    
                    featureContents.forEach(content => {
                        if (content.id === tabId) {
                            content.classList.add('active');
                        } else {
                            content.classList.remove('active');
                        }
                    });
                });
            });

            const updateFounderContent = () => {
                founderContents.forEach((content, index) => {
                    content.classList.remove('active');
                    if (index === currentIndex) {
                        content.classList.add('active');
                    }
                });
            };

            document.getElementById('prev-founder').addEventListener('click', () => {
                currentIndex = (currentIndex === 0) ? founderContents.length - 1 : currentIndex - 1;
                updateFounderContent();
            });

            document.getElementById('next-founder').addEventListener('click', () => {
                currentIndex = (currentIndex === founderContents.length - 1) ? 0 : currentIndex + 1;
                updateFounderContent();
            });

            // Show the container with animation
            const containers = document.querySelectorAll('.container');
            containers.forEach(container => {
                setTimeout(() => container.classList.add('visible'), 100);
            });
        });
    </script>
